<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Theme applied to the Android Window while the process is starting. This theme is only used for
         the launch screen (splash screen) before Flutter creates its own UI. -->
    <style name="LaunchTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Show a splash screen on the activity's background -->
        <item name="android:windowBackground">@drawable/launch_background</item>
    </style> <!-- CORRECTED: Added missing closing </style> tag here -->

    <!-- Theme applied to the Flutter Activity when the Flutter UI is displayed. -->
    <style name="NormalTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">@android:color/white</item>
    </style>
</resources>
